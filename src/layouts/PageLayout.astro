---
import Head from "@components/Head.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import { SITE } from "@consts";

type Props = {
  title: string;
  description: string;
};

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <Head title={`${title} | ${SITE.NAME}`} description={description} />
  </head>
  <body class="absolute inset-0 h-full w-full dark:bg-[radial-gradient(#2a2a2a_1px,transparent_1px)] dark:[background-size:16px_16px] bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] [background-size:16px_16px]">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
